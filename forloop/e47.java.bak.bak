class e47 
{
	public static void main(String[] args) 
	{
		int n=4;
		int space=3;
		int star=1;
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<space;j++)
			{
				System.out.print("  ");
			}
			for(int k=0;k<star;k++)
			{
			 System.out.print("* ");
			}
			space--;
			star+=2;
			System.out.println();
		}
	}
		int space=1;
		int star=5;
		for(int i=1;i<n;i++)
		{
			for(int j=0;j<space;j++)
			{
				System.out.print("  ");
			}
			for(int k=0;k<star;k++)
			{
			 System.out.print("* ");
			}
			space++;
			star-=2;
			System.out.println();
		}
	}
}
